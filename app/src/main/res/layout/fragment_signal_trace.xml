<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pitersk.poormanslogicanalyzerapp.MultipleTraceView
        android:id='@+id/multiple_trace_view'
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </com.pitersk.poormanslogicanalyzerapp.MultipleTraceView>

    <com.pitersk.poormanslogicanalyzerapp.TimeCursor
        android:id="@+id/cursor_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <TextView
        android:id="@+id/cursor_one_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left" />

    <ToggleButton
        android:id="@+id/move_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textOff="Move Cursor"
        android:textOn="Move Signal" />

</FrameLayout>